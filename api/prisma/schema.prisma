generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TempCompany {
  id           String        @id @default(uuid())
  cnpj         String        
  companyName  String        @map("company_name")
  email        String
  userName     String        @map("user_name")
  password     String
  token        String
  expiration   DateTime

  @@map("temp_company")
}

model PasswordToken {
  id          String    @id @default(uuid())
  token       String
  expiration  DateTime

  userId      String    @map("user_id")
  user        User      @relation(fields: [userId], references: [id])

  @@map("password_token")
}

model Email {
  id        String    @id @default(uuid())
  to        String
  subject   String
  body      String
  from      String?
  createdAt DateTime  @default(now()) @map("created_at")
  sentAt    DateTime? @map("sent_at")

  @@map("emails")
}

model Company {
  id            String         @id @default(uuid())
  name          String
  cnpj          String         @unique
  createdAt     DateTime       @default(now()) @map("created_at")
  lealName      String?        @map("leal_name")

  users         User[]

  @@map("companies")
}

model User {
  id          String       @id @default(uuid())
  name        String
  email       String       @unique
  password    String
  role        UserRole
  createdAt   DateTime     @default(now()) @map("created_at")
  active      Boolean      @default(false)
  lastLogin   DateTime?    @map("last_login")

  companyId   String       @map("company_id")
  company     Company      @relation(fields: [companyId], references: [id])

  passwordTokens PasswordToken[]

  @@map("users")
}


enum UserRole {
  ADMIN
  MANAGER
  EMPLOYEE
}